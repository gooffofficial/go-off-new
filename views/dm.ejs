	<script>
		function form(){
			var d = new Date();
			document.getElementById('timezone').setAttribute('value', d.getTimezoneOffset()/60)
		}

		function dropclick1(id) {
			var x = document.getElementById(id);
			if (x.style.display === "block") {
				x.style.display = "none";
			} else {
				x.style.display = "block";
